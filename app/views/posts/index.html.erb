<% @posts.each do |post|%>
<div class='container '>
  <div class='row bg-post col-md-12 col-md-offset-0'>
        <h2><%=  link_to post.title, post_path(post) %></h2>
        <%= post.body %><br>
        <%= link_to "Read more »", post_path(post) %> | 
        <%= link_to "Delete", post, method: :delete, data:{confirm: 'Вы в этому уверенны ?'} %> | 
        <%= link_to "Edit", edit_post_path(post) %>
  </div>
</div>
<br>
<% end %>

