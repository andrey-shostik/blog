<h1>Registration</h1>
<%= form_for @user do |f| %>
	<p>
		<%= f.label :name %> <br />
		<%= f.text_field :name %> <br />
	</p>
	
	<p>
		<%= f.label :email %> <br />
		<%= f.text_field :email %> <br />
	</p>

	<p>
		<%= f.label :password %> <br />
		<%= f.password_field :password %> <br />
	</p>

	<p>
		<%= f.submit 'New User'%>
	</p>

<% end %>
